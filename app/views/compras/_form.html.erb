<%= form_for(@compra) do |f| %>
<% if @compra.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@compra.errors.count, "error") %> prohibited this compra from being saved:</h2>

  <ul>
    <% @compra.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">
  <div class="input-field col s2 offset-s2">
    <i class="material-icons prefix">receipt</i>
    <%= f.label :documento %>
    <%= f.text_field :documento %>
  </div>

  <div class="input-field col s2">
    <i class="material-icons prefix">list</i>
    <%= f.label :serie %>
    <%= f.number_field :serie %>
  </div>

  <div class="input-field col s2">
    <i class="material-icons prefix">format_list_numbered</i>
    <%= f.label :numero %>
    <%= f.number_field :numero %>
  </div>

  <div class="input-field col s2">
    <i class="material-icons prefix">date_range</i>
    <%= f.label :dia %>
    <%= f.number_field :dia %>
  </div>

  <div class="input-field col s4">
    <i class="material-icons prefix">vpn_key</i>
    <%= f.label :proveedor_nit,"Nit(*)"%>
    <%= f.text_field :proveedor_nit, id:"compras_proveedor_nit", autocomplete:"off", required:true  %>
  </div>

  <div class="input-field col s4">
    <i class="material-icons prefix">assignment_ind</i>
    <%= f.label :proveedor_nombre, "Nombre Proveedor(*)"%>
    <%= f.text_field :proveedor_nombre, id:"compras_proveedor_nombre", required:true%>
  </div>

  <div class="input-field col s4">
    <i class="material-icons prefix">shopping_basket</i>
    <%= f.label :tipo_de_gasto, "Tipo de Gasto(*)" %>
    <%= f.text_field :tipo_de_gasto, id:"compras_tipo_de_gasto", required:true %>
  </div>

  <div class="row">
    <div class="col s4 offset-s1 center-align">
    <h2>Valor</h2>  
  </div>
  </div>

  <div class="row">
    <div class="input-field col s4 offset-s2">
      <%= f.label :bienes %>
      <%= f.text_field :bienes, placeholder: "Q0.00" %>
    </div>
    <div class="input-field col s4">
      <%= f.label :servicios %>
      <%= f.text_field :servicios, placeholder:"Q0.00" %>
    </div>
  </div>



  <div class="actions row">
    <div class="col s4 offset-s4 center-align">
      <%= f.submit class:"btn waves-effect waves-teal", value:"Enviar" %>
    </div>
  </div>
</div>

<% end %>
