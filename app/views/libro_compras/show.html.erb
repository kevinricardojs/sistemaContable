<p id="notice"><%= notice %></p>

<p>
  <strong>Establecimiento:</strong>
  <%= @libro_compra.establecimiento.nombre %>
</p>

<p>
  <strong>Mes:</strong>
  <%= @libro_compra.mes %>
</p>

<p>
  <strong>Year:</strong>
  <%= @libro_compra.year %>
</p>

<table class="centered">
  <thead>
    <tr>
      <th colspan="7"></th>
      <th colspan="2" class="center-align">Valor</th>
      <th colspan="3"></th>
    </tr>
    <tr>
      <th>Doc</th>
      <th>Serie</th>
      <th>Numero</th>
      <th>Nit</th>
      <th>Nombre</th>
      <th>Base</th>
      <th>Iva</th>
      <th>Bienes</th>
      <th>Servicios</th>
      <th>Total</th>
      <th colspan="2">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @libro_compra.compras.each do |compra| %>
    <tr class="no-border-top">
      <td><%= compra.documento %></td>
      <td><%= compra.serie %></td>
      <td><%= compra.numero %></td>
      <td><%= compra.proveedor.nit %></td>
      <td><%= compra.proveedor.nombre %></td>
      <td><%= compra.base %></td>
      <td><%= compra.iva %></td>
      <td><%= compra.bienes %></td>
      <td><%= compra.servicios %></td>
      <td><%= compra.total %></td>
      <td class="">
        <%= link_to content_tag(:i ,'edit',class:"material-icons"), edit_compra_path(compra) ,class:"teal-text text-darken-3" %>
      </td>
      <td class="">
        <%= link_to content_tag(:i ,'delete_forever',class:"material-icons"), compra, method: :delete, data: { confirm: 'Estas seguro?' },class:"red-text text-darken-4" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_compra_path, class:"waves-effect waves-light btn cyan darken-4 btn-floating" do %>
	<i class="material-icons left">arrow_back</i>
<%end%>