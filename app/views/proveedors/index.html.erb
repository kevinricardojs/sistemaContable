<p id="notice"><%= notice %></p>

<h1>Lista de Proveedores</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Nit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proveedors.each do |proveedor| %>
      <tr>
        <td><%= proveedor.nombre %></td>
        <td><%= proveedor.nit %></td>
        <td><%= link_to 'Ver', proveedor %></td>
        <td><%= link_to 'Editar', edit_proveedor_path(proveedor) %></td>
        <td><%= link_to 'Borrar', proveedor, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="actions row">
  <div class="col s4 offset-s4 center-align">
    <%= link_to 'Nuevo Proveedor', new_proveedor_path, class:"btn waves-effect waves-teal" %>
  </div>
</div>
