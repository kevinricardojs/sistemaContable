<div class="row">
  <div class="col offset-s3 s6 center-align">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <div class="row">
        <div class="input-field col s12">
          <%= f.label "Nombre Completo"%>
          <%= f.text_field :full_name, required: true, autofocus: true %>
        </div>
      </div>
      <div class="row">
      <div class="input-field col s12">
          <%= f.label "Email"%>
          <%= f.text_field :email, required: true%>    
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
        <%= f.label "Contraseña"%>
          <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>  
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <%= f.label "Confirmar Contraseña"%>
          <%= f.password_field :password_confirmation, required: true %>  
        </div>
      </div>
      
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
    <% end %>

  </div>
</div>
<%= render "devise/shared/links" %>
